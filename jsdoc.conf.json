{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "./src/"
        ],
        "includePattern": ".+\\.js?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown",
        "@pixi/jsdoc-template/plugins/es6-fix"
    ],
    "templates": {
        "cleverLinks"   : false,
        "monospaceLinks": false,
        "default"       : {
            "outputSourceFiles" : false
        },
        "applicationName": "resource-loader",
        "footer"        : "Made by Chad Engler <chad@pantherdev.com>",
        "copyright"     : "Copyright &copy; 2017 Chad Engler.",
        "linenums"      : false
    },
    "markdown"  : {
        "parser"        : "gfm",
        "hardwrap"      : true
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "private"       : false,
        "lenient"       : true,
        "destination"   : "./docs",
        "template"      : "./node_modules/@pixi/jsdoc-template"
    }
}
